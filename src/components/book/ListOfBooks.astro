---
import BookItem from './BookItem.astro';
import { books } from '../../data/books.js';
---

<ul class="grid sm:grid-cols-2 md:grid-cols-3 gap-8 mt-52 place-items-center m-auto">
        {
            books.map((book) => {
                return (
                    <ul class="card aspect-square">
                        <BookItem id={book.id} title={book.title} img={book.img} three={book.three} />
                    </ul>
                )
            })
        }
</ul>


<style>
    .card {
        border: solid 1px #fff;
        width: auto;
        height: auto;
        border-radius: 30px;
        background: #313131;
        box-shadow: 15px 15px 30px #000000,
                   -15px -15px 30px #353535;
    }
        .card:hover{
            transition: all 0.3s ease-in-out;
            transform: translateY(-5px);
            filter: brightness(1.05);
            box-shadow: 3px 3px 5px #000000,
                    -3px -15px 5px #202020;
    }

    :global(.light) .card {
        background: #e0e0e0;
        box-shadow: 15px 15px 30px #bebebe,
                   -15px -15px 30px #ffffff;
	}
    :global(.light) .card:hover {
        transition: all 0.3s ease-in-out;
        transform: translateY(-5px);
        filter: brightness(1.05);
        box-shadow: 3px 3px 5px #bebebe,
                -3px -3px 5px #ffffff;
	}


</style>

